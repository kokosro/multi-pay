{
  "name": "@kokosro/multi-pay",
  "version": "1.0.0",
  "description": "contract to send ether and tokens to multiple addresses at once",
  "main": "index.js",
  "scripts": {
    "ganache": "node ./scripts/start-ganache.js",
    "init-solhint": "./node_modules/.bin/solhint init-config",
    "solhint": "./node_modules/.bin/solhint -f table contracts/**/*.sol contracts/**/**/*.sol contracts/**/**/**/*.sol contracts/*.sol",
    "prettier:solidity": "./node_modules/.bin/prettier --write contracts/**/*.sol contracts/**/**/*.sol contracts/**/**/**/*.sol contracts/*.sol",
    "compile": "./node_modules/hardhat/internal/cli/cli.js compile ",
    "force-compile": "./node_modules/hardhat/internal/cli/cli.js compile --force",
    "test": "./node_modules/hardhat/internal/cli/cli.js test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kokosro/multi-pay.git"
  },
  "author": "kokos.eth",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kokosro/multi-pay/issues"
  },
  "homepage": "https://github.com/kokosro/multi-pay#readme",
  "devDependencies": {
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "chai": "4.3.6",
    "ethereum-waffle": "3.4.4",
    "ganache-cli": "^6.12.2",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "0.0.5"
  },
  "dependencies": {
    "@ethersproject/experimental": "^5.6.0",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@openzeppelin/contracts": "^4.5.0",
    "convict": "^6.2.2",
    "dotenv": "^16.0.0",
    "ethers": "^5.6.4",
    "hardhat": "^2.9.3",
    "solc": "^0.8.13"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prettier:solidity"
    }
  }
}
